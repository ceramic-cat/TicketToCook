@page "/recipes"
@inject HttpClient Http
@using TicketToCode.Core.Enums
@using TicketToCode.Blazor.Components

<PageTitle>Recipes</PageTitle>

<h1>Recipes</h1>

@if (recipes == null)
{
    <p>Loading...</p>
}
else if (!recipes.Any())
{
    <p>No recipes available.</p>
}
else
{
    <div class="card-container">
        @foreach (var recipe in recipes)
        {
            <div class="card">
                <div class="card-header">
                    <h2><a href="/recipe/@recipe.Id">@recipe.Name</a></h2>
                </div>
                <div class="card-body">
                    <RecipeDetail Id="@recipe.Id" ShowName="false" ShowDescription="false" ShowIngredients="false" ShowInstructions="false" ShowCategory="true" />
                </div>
            </div>
        }
    </div>
}

@code {
    private List<Recipe>? recipes;

    protected override async Task OnInitializedAsync()
    {
        recipes = await Http.GetFromJsonAsync<List<Recipe>>("https://localhost:5001/Recipes");
    }

    public class Recipe
    {
        public int Id { get; set; }
        public string Name { get; set; }
        public string CategoryDescription { get; set; }
    }
}